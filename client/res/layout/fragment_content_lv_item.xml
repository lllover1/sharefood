<?xml version="1.0" encoding="utf-8"?>
  <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
  >

    <ImageView
        android:id="@+id/lv_item_conent_img"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/border"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/lv_item_conent_text1"
        android:layout_width="fill_parent"
        android:layout_height="30dip"
        android:gravity="center"
        android:background="@drawable/text_border"
        android:layout_below="@+id/lv_item_conent_img"
        android:text="我是菜名"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/ll_content_1"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/lv_item_conent_text1"
        android:background="@drawable/text_border"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/lv_item_conent_text2"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dip"
            android:layout_marginRight="20dip"
            android:layout_gravity="center"
            android:text="测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字测试文字"
            android:textColor="#000000"
            android:textSize="15dp" />
       

    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_below="@+id/ll_content_1"/>
    
</RelativeLayout>